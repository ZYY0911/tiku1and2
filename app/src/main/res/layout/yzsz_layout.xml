<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/z_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="自动报警:"
            android:textColor="#000"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/switch_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="开"
            android:textColor="#000"
            android:textSize="50sp" />

        <Switch
            android:id="@+id/switch_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:text="温        度:"
                android:textColor="#000"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/tv_wd"
                android:layout_width="700dp"
                android:layout_height="match_parent"
                android:background="@drawable/z_black_border"
                android:inputType="number" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:text="湿        度:"
                android:textColor="#000"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/tv_sd"
                android:layout_width="700dp"
                android:layout_height="match_parent"
                android:background="@drawable/z_black_border"
                android:inputType="number" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:text="光        照:"
                android:textColor="#000"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/tv_gz"
                android:layout_width="700dp"
                android:layout_height="match_parent"
                android:background="@drawable/z_black_border"
                android:inputType="number" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:text="CO2        :"
                android:textColor="#000"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/tv_co"
                android:layout_width="700dp"
                android:layout_height="match_parent"
                android:background="@drawable/z_black_border"
                android:inputType="number" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:text="PM2.5    :"
                android:textColor="#000"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/tv_pm"
                android:layout_width="700dp"
                android:layout_height="match_parent"
                android:background="@drawable/z_black_border"
                android:inputType="number" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:text="道路状态:"
                android:textColor="#000"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/tv_dl"
                android:layout_width="700dp"
                android:layout_height="match_parent"
                android:background="@drawable/z_black_border"
                android:inputType="number" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/save_bt"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:background="@drawable/z_border"
                android:text="保存"
                android:textSize="40sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>


