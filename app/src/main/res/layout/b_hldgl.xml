<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:orientation="vertical">

<include layout="@layout/b_head"></include>
    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        android:textSize="55dp"
        android:text="红绿灯信息管理"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="35dp"
        android:textColor="#000000"
        android:textSize="55dp"
        android:text="排序:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <ScrollView
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:background="@drawable/b_bg"
            android:layout_marginTop="10dp"
            android:layout_width="800dp"
            android:layout_height="50dp">
            <Spinner
                android:entries="@array/hld"
                android:id="@+id/select"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </Spinner>
        </ScrollView>
        <Button
            android:layout_marginLeft="50dp"
            android:textSize="35dp"
            android:id="@+id/chaxun"
            android:text="查询"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:paddingRight="185dp"
        android:paddingLeft="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/b_bg"
            android:padding="1dp"
            android:id="@+id/tv_road"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#120505"
            android:textSize="40dp"
            android:layout_weight="1"
            android:text="路口"
            android:layout_height="match_parent"
            android:layout_width="0dp"/>
        <TextView
            android:background="@drawable/b_bg"
            android:padding="1dp"
            android:id="@+id/tv_red"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#120505"
            android:textSize="40dp"
            android:layout_weight="1"
            android:text="红灯时长(s)"
            android:layout_height="match_parent"
            android:layout_width="0dp"/>
        <TextView
            android:background="@drawable/b_bg"
            android:id="@+id/tv_yellow"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#120505"
            android:textSize="40dp"
            android:layout_weight="1"
            android:text="黄灯时长(s)"
            android:layout_height="match_parent"
            android:layout_width="0dp"/>

        <TextView
            android:background="@drawable/b_bg"
            android:id="@+id/tv_green"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#120505"
            android:textSize="40dp"
            android:layout_weight="1"
            android:text="绿灯时长(s)"
            android:layout_height="match_parent"
            android:layout_width="0dp"/>

    </LinearLayout>

        <ListView
            android:paddingRight="185dp"
            android:paddingLeft="45dp"
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
</LinearLayout>
