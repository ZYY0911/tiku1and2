<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/b_head2"/>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/image_tody"
                   android:layout_marginTop="5dp"
                   android:src="@drawable/qing"
                   android:layout_marginLeft="50dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_marginLeft="900dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:text="北京"
                       android:textStyle="bold"
                       android:textColor="#000"
                       android:textSize="40dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/wd_tody"
                       android:text="北京"
                       android:textStyle="bold"
                       android:textColor="#000"
                       android:textSize="40dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                        android:id="@+id/date"
                       android:layout_marginLeft="50dp"
                       android:text="2018"
                       android:textStyle="bold"
                       android:textColor="#000"
                       android:textSize="30dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:layout_marginLeft="35dp"
                       android:text="周三"
                       android:textStyle="bold"
                       android:textColor="#000"
                       android:textSize="30dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>

           </LinearLayout>
           <TextView
               android:text="预报"
               android:textStyle="bold"
               android:textColor="#000"
               android:textSize="40dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <GridView
               android:numColumns="5"
               android:id="@+id/gv"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="0dp">

           </GridView>
           <TextView
               android:paddingLeft="20dp"
               android:textStyle="bold"
               android:textColor="#000"
               android:textSize="30dp"
               android:text="室外空气指数"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:paddingLeft="20dp"
                   android:textStyle="bold"
                   android:textColor="#000"
                   android:textSize="30dp"
                   android:text="           PM2.5:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:textStyle="bold"
                   android:textColor="#000"
                   android:textSize="30dp"
                   android:id="@+id/pm"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:paddingLeft="20dp"
                   android:textStyle="bold"
                   android:textColor="#000"
                   android:textSize="30dp"
                   android:text="           温    度:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:textStyle="bold"
                   android:textColor="#000"
                   android:textSize="30dp"
                   android:id="@+id/wd"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:paddingLeft="20dp"
                   android:textStyle="bold"
                   android:textColor="#000"
                   android:textSize="30dp"
                   android:text="           湿    度:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:textStyle="bold"
                   android:textColor="#000"
                   android:textSize="30dp"
                   android:id="@+id/sd"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_gz"
            android:layout_marginLeft="15dp"
            android:src="@drawable/shengtaiyang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/gzcd"
                android:paddingLeft="15dp"
                android:text="强"
                android:textColor="#000"
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/gzjy"
                android:paddingLeft="15dp"
                android:text="强"
                android:textColor="#000"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_marginLeft="15dp"
            android:src="@drawable/shengtaiyang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pbcd"
                android:paddingLeft="15dp"
                android:text="强"
                android:textColor="#000"
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pbjy"
                android:paddingLeft="15dp"
                android:text="强"
                android:textColor="#000"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
       </LinearLayout>

   </ScrollView>
</LinearLayout>