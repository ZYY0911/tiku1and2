<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/head_dz2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginRight="3dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:background="#ff6b18"
                android:textColor="#fff"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019年9月-2019年10月"
                />
            <LinearLayout
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/gridjq"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="周日"
                    />
                <TextView
                    android:background="@drawable/gridjq"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="周一"
                    />
                <TextView
                    android:background="@drawable/gridjq"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="周二"
                    />
                <TextView
                    android:background="@drawable/gridjq"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="周三"
                    />
                <TextView
                    android:background="@drawable/gridjq"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="周四"
                    />
                <TextView
                    android:background="@drawable/gridjq"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="周五"
                    />
                <TextView
                    android:background="@drawable/gridjq"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="周六"
                    />
            </LinearLayout>
            <GridView
                android:horizontalSpacing="0dp"
                android:verticalSpacing="0dp"
                android:padding="0dp"
                android:numColumns="7"
                android:id="@+id/dz3_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></GridView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="乘车日期："
                android:textSize="37dp"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="25dp"
                android:id="@+id/dz3_tv"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/dz3_ok"
                    android:textSize="25dp"
                    android:textColor="#fff"
                    android:text="下一步"
                    android:background="#05b0ce"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>