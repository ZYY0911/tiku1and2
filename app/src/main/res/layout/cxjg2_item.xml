<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/cxjg2_layout"
        android:background="#fff"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cxjg2_sj"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2017-04-02 17:45:00"
                android:textSize="25dp"
                />
            <TextView
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="未处理"
                android:textSize="28dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/cxjg2_road"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学院路"
            android:textSize="40dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/cxjg2_nr"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:text="aaaaaaaaaaaaaaa"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扣分："
                android:textSize="30dp"
                android:textColor="#000"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/cxjg2_kf"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="30dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"
                android:textSize="30dp"
                android:textColor="#000"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="罚款："
                android:textSize="30dp"
                android:textColor="#000"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/cxjg2_fk"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textSize="30dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="30dp"
                android:textColor="#000"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/listbottombg"
        />
</LinearLayout>