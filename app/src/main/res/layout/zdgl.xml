<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/b_head"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="账单记录"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:entries="@array/paixu"
            android:id="@+id/select"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="800dp"
            android:layout_height="60dp">

        </Spinner>
        <Button
            android:textSize="30dp"
            android:id="@+id/chaxun"
            android:layout_marginLeft="10dp"
            android:text="查询"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:background="@drawable/b_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="序号"
            android:id="@+id/xuhao_z"
            android:textSize="35sp" />



        <TextView
            android:textColor="#000"
            android:background="@drawable/b_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="车号"
            android:id="@+id/chehao_z"
            android:textSize="35sp" />



        <TextView
            android:textColor="#000"
            android:background="@drawable/b_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="充值金额(元)"
            android:id="@+id/jine_z"
            android:textSize="35dp" />



        <TextView
            android:textColor="#000"
            android:background="@drawable/b_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/caozuo_z"
            android:text="操作人"
            android:textSize="35sp" />



        <TextView
            android:textColor="#000"
            android:background="@drawable/b_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="充值时间"
            android:id="@+id/shijian_z"
            android:textSize="35dp" />
    </LinearLayout>
    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>



</LinearLayout>